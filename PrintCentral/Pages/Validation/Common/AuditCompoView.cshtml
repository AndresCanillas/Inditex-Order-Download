    viewform {
        display: block;
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    viewcard, viewrow, viewcolumn, viewfooter {
        display: block;
    }

    viewrow {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        margin-bottom: 20px;
    }

    viewcolumn {
        flex: 1;
        min-width: 300px;
    }

    #AuditForm {
        animation: fadeIn 0.5s ease-in-out;
    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .modal-compo {
        background: white;
        border-radius: 10px;
        padding: 25px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border: 1px solid #e9ecef;
    }

    hr {
        border: none;
        height: 2px;
        background: linear-gradient(90deg, #dee2e6, transparent);
        margin: 20px 0;
    }

    .remove-row-btn:hover {
        background: linear-gradient(135deg, #e74c3c, #f67b6f);
        transform: translateY(-2px);
    }
</style>

