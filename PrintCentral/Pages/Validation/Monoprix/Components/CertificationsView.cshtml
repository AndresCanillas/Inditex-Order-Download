@page
@using Service.Contracts.Documents 
@inject ILocalizationService g
@inject IMappingRepository mappingRepo
@inject IUserData userData
@inject IPluginManager<IDocumentImportPlugin> pluginManager
@{
	Layout = null;
}
	<viewcard>
		<viewrow style="margin-left:2px;">
				<svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
					<symbol id="check-circle-fill" fill="currentColor" viewBox="0 0 16 16">
						<path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
					</symbol>
					<symbol id="info-fill" fill="currentColor" viewBox="0 0 16 16">
						<path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z" />
					</symbol>
					<symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
						<path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
					</symbol>
				</svg>

				<div class="alert alert-primary d-flex align-items-center" role="alert">
					<svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Info:"><use xlink:href="#info-fill" /></svg>
					<div>
						<span class="ml-2">@g["Remember to click the save button before selecting a certificate."]</span>
					</div>
				</div>

		</viewrow>
		<viewrow>
			<viewcolumn>
				<div class="toolbar-body d-flex align-items-center" style="width:100%">
						<div class="d-flex align-items-center">
							<a href="#" title="@g["Add Certification"]" action="AddRow" class="d-flex align-items-center">
								<span class="fa fa-plus"></span>
								<span style="font-size: 0.75em; margin-left: 5px;">@g["Add Certification"]</span>
							</a>
						</div>
						<div class="d-flex align-items-center">
							<a href="#" title="@g["Delete Certification"]" action="Delete">
								<span class="fa fa-trash"></span>
								<span style="font-size: 0.75em; margin-left: 5px;">@g["Delete Certification"]</span>
							</a>
						</div>
						
					</div>
				<div component="GridView" name="MappingsTable" style="width:100%; height:370px;">
					<template>
						<column width="140" field="CertificateNumber" editable sortable>@g["Certificate Number"]</column>
						<column width="140" field="CertifyingCompany" editable sortable>@g["Certifying Company"]</column>
						<column width="140" field="CertificationExpiration" type="Date" editable sortable>@g["Certification Expiration"]</column>
						<column width="0" field="ID" hidden>@g["ID"]</column>
						<column width="0" field="CompanyID" hidden>@g["Company ID"]</column>
						<column width="140" field="SupplierReference" hidden>@g["Supplier Reference"]</column>
					</template>
				</div>
			</viewcolumn>
		</viewrow>
		<viewfooter>
			<a href="#" class="btn btn-primary" action="Save">@g["Save"]</a>
			<a href="#" class="btn btn-outline-primary" action="Selected">@g["Select"]</a>
		</viewfooter>

	</viewcard>

<script>
		document.addEventListener("scroll", function () {
		let datepickerDiv = document.querySelector(".gvdtpicker.hasDatepicker");
		if (datepickerDiv) {
			datepickerDiv.remove(); // Elimina el elemento del DOM
		}
	});
</script>
