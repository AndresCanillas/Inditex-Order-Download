@page
@inject ILocalizationService g
@inject IUserData userData

@{
    Layout = null;
}
<viewform>


    <nav class="navbar navbar-light bg-light mx-0 p-1 mt-2 border-top border-bottom" style="background-color:#bee5eb !important;">
        <span class="btn btn-sm" style="cursor: auto;">
            Order N° : <span name="OrderNumber"> - </span>
        </span>
    </nav>

    <div class="separator mt-3" />

    <!-- formulario custom -->
    <viewrow>

        <viewcolumn>
            <!-- PACKS -->
            <viewrow>
                <viewcolumn>

                    <div class="form-group packfindercontainer">
                        <label style="margin-right:10px">Packs Text:</label>
                        <div name="PackFinderContainer" class="input-group input-group-sm">
                            <select name="PackFinder" data-live-search="true" class="form-control custom-select-sm" no-transform></select>
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="button" action="ExpandPack"><span class="fa fa-plus" /></button>
                            </div>
                        </div>
                    </div>

                </viewcolumn>
            </viewrow>

            <!-- Article Grid -->
            <viewrow>
                <viewcolumn>
                    <div class="article-grid-container mt-2">
                        <div class="toolbar-body" style="width:100%; margin-top:15px;">
                            <span class="toolbar-grip" /><a href="#" title="Remove" action="RemoveArticle"><span class="fa fa-trash" /></a>
                        </div>
                        <div component="OrderGrid" name="Articles">
                            <template>
                                <column width="120" field="ArticleName">@g["Article"]</column>
                                <column width="120" field="ArticleID">@g["Article ID"]</column>
                                <column width="120" field="ArticleCode">@g["Article Code"]</column>
                                <column width="120" field="ArticleType">@g["Article Type"]</column>
                                <column width="40" field="RFID">@g["RFID"]</column>
                                <column width="120" field="PackCode">@g["PackCode"]</column>
                                <column width="40" field="IsItem">@g["Is Item"]</column>
                            </template>
                        </div>
                    </div>

                </viewcolumn>
            </viewrow>

        </viewcolumn>

        <viewcolumn>

            <!-- carrusel de imagenes -->
            <viewrow>
                <viewcolumn>
                    <!-- carrusel of images  -->
                    <div name="article-carousel" id="articlesSelected" class="carousel slide" data-ride="carousel" style=" width:60%; margin: 5px auto;">
                        <ol name="CarrouselIndicator" class="carousel-indicators"></ol>
                        <div name="CarrouselContent" class="carousel-inner">
                        </div>
                        <a class="carousel-control-prev" href="#articlesSelected" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true" />
                            <span class="sr-only">>@g["Previous"]</span>
                        </a>
                        <a class="carousel-control-next" href="#articlesSelected" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true" />
                            <span class="sr-only">@g["Next"]</span>
                        </a>
                    </div>
                </viewcolumn>
            </viewrow>

        </viewcolumn>

    </viewrow>

    <viewrow>
        <viewcolumn>
            <div name="Images" component="FormView" controller="/Common/Components/ImageListView.js" />
            <input model name="UserImage" validation="required" type="hidden" />
        </viewcolumn>
    </viewrow>

</viewform>
