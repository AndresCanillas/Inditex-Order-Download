 @page
@inject ILocalizationService g
@inject IUserData userData

@{
    Layout = null;
}
<viewform>


    <nav class="navbar navbar-light bg-light mx-0 p-1 mt-2 border-top border-bottom" style="background-color:#bee5eb !important;">
        <span class="btn btn-sm" style="cursor: auto;">
            Order N° : <span name="OrderNumber"> - </span>
        </span>
    </nav>

    <div class="separator mt-3" />

    <!-- formulario custom -->
    <viewrow>

        <viewcolumn>

            <!-- Made In -->
            <viewrow>
                <viewcolumn>
                    <input model name="FullMadeIn" type="hidden" maxlength="256" />
                    <select model name="MadeIn" label="@g["Made In"]" validation="required;range(0,1000000)" class="form-control form-control-sm" />
                </viewcolumn>
            </viewrow>

            <!-- CIF -->
            <viewrow>
                <viewcolumn>
                    <input model name="CIF" type="text" label="@g["CIF"]" validation="required;maxlen(24);" pattern="^([ABCDEFGHJKLMNPQRSUVW])(\d{7})([0-9A-J])$" />
                </viewcolumn>
            </viewrow>

            <!-- PACKS -->
            <!--<viewrow>
                <viewcolumn>

                    <div class="form-group packfindercontainer">
                        <label style="margin-right:10px">Packs Text:</label>
                        <div name="PackFinderContainer" class="input-group input-group-sm">
                            <select name="PackFinder" data-live-search="true" class="form-control custom-select-sm" no-transform></select>
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="button" action="ExpandPack"><span class="fa fa-plus" /></button>
                            </div>
                        </div>
                    </div>

                </viewcolumn>
            </viewrow>-->

            <!-- Article Finder -->
            <!--<viewrow>
                <viewcolumn>

                    <div class="form-group">
                        <label style="margin-right:10px">@g["Article Text:"]</label>
                        <div name="ArticleFinderContainer" class="input-group input-group-sm">
                            <select name="ArticleFinder" data-live-search="true" class="form-control custom-select-sm " no-transform></select>
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="button" action="AddArticle"><span class="fa fa-plus" /></button>
                            </div>
                        </div>
                    </div>

                </viewcolumn>
            </viewrow>-->

            <!-- Article Grid -->
            <viewrow>
                <viewcolumn>
                    <div class="article-grid-container mt-2">
                        <!--<div class="toolbar-body" style="width:100%; margin-top:15px;">
                            <span class="toolbar-grip" /><a href="#" title="Remove" action="RemoveArticle"><span class="fa fa-trash" /></a>
                        </div>-->
                        <div component="OrderGrid" name="Articles">
                            <template>
                                <column width="120" field="ArticleName">@g["Article"]</column>
                                <column width="120" field="ArticleID">@g["Article ID"]</column>
                                <column width="120" field="ArticleCode">@g["Article Code"]</column>
                                <column width="120" field="ArticleType">@g["Article Type"]</column>
                                <column width="40" field="RFID">@g["RFID"]</column>
                                <column width="120" field="PackCode">@g["PackCode"]</column>
                                <column width="40" field="IsItem">@g["Is Item"]</column>
                            </template>
                        </div>
                    </div>

                </viewcolumn>
            </viewrow>

        </viewcolumn>

        <viewcolumn>

            <!-- carrusel de imagenes -->
            <viewrow>
                <viewcolumn>
                    <!-- carrusel of images  -->
                    <div name="article-carousel" id="articlesSelected" class="carousel slide" data-ride="carousel" style=" width:60%; margin: 5px auto;">
                        <ol name="CarrouselIndicator" class="carousel-indicators"></ol>
                        <div name="CarrouselContent" class="carousel-inner">
                        </div>
                        <a class="carousel-control-prev" href="#articlesSelected" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true" />
                            <span class="sr-only">>@g["Previous"]</span>
                        </a>
                        <a class="carousel-control-next" href="#articlesSelected" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true" />
                            <span class="sr-only">@g["Next"]</span>
                        </a>
                    </div>
                </viewcolumn>
            </viewrow>

        </viewcolumn>

    </viewrow>

    <viewrow>
        <div class="col-sm-12" name="ImagesContainer">
            <div class="alert alert-primary align-items-center" role="alert">
                <b>@g["Image Requirements for the Model"]</b>
                <div>@g["To ensure accurate and consistent analysis, please make sure your photos meet the following criteria:"]</div>
                <div>
                    <b>@g["Footwear: "]</b><span>@g["Color photo of the right foot, outer side view. "]</span> 
                    <b>@g["Eyewear: "]</b> <span>@g["Color photo, front view. "]</span>
                </div>
            </div>
            <div name="Images" component="FormView" controller="Validation/Brownie/Components/ImageListView.js"></div>
            <div name="FileErrorMessage" class="form-error" title="File cannot be empty." style="display:none;"><span class="fa fa-exclamation-triangle"></span><span class="form-error-text">File cannot be empty.</span></div>
            <input model name="UserImage" validation="required" type="hidden"/>
        </div>
    </viewrow>

</viewform>
