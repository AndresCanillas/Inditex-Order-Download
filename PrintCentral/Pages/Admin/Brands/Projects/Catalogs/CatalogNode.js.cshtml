@page
@inject ILocalizationService g
@inject IUserData userData
@{
	Layout = null;
	var requestCulture = CultureInfo.CurrentUICulture.Name;
}
//# sourceURL=https://Pages/Admin/Brands/Projects/Catalogs/CatalogNode.js
