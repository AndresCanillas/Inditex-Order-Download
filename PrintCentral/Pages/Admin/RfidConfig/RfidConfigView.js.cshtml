	var RfidConfigView = function (id) {
		this.id = id;
		var viewUrl = "/Admin/RfidConfig/RfidConfigView";
		if (id)
			viewUrl += `?id=${id}`;
		FormView.Extend(this, "@g["RFID Configuration"]", viewUrl);
		this.OnUnloaded.Subscribe(this, (data) => {
			if (this.ConfigForm != null) {
				this.ConfigForm.Unload();
				this.ConfigForm = null;
			}
		});
	};


    RfidConfigView.prototype = {
        constructor: RfidConfigView,

		OnLoad: function () {
			var self = this;
			if (this.model.SerializedConfig == null || this.model.SerializedConfig.length == 0) {
				var dlg = new ConfirmDialog("@g["There is no RFID configuration defined at this level... Create a new record?"]")
				dlg.ShowDialog(function (result) {
					if (result) {
						self.ConfigForm = new AppContext.DynamicConfigForm("rfid", self.model.SerializedConfig);
						self.ConfigForm.Show(self.elements.ConfigContainer);
					}
					else {
						setTimeout(() => self.Cancel(), 50);
					}
				});
			}
			else {
				this.ConfigForm = new AppContext.DynamicConfigForm("rfid", this.model.SerializedConfig);
				this.ConfigForm.Show(this.elements.ConfigContainer);
			}
		},

		Save: function (e) {
			var self = this;
			this.model.SerializedConfig = this.ConfigForm.Save();
			  if (this.model.SerializedConfig ==="") 
				return 
			var data = this.GetData();
            AppContext.RfidConfig.Update(data, function (result) {
				if (result.Success) {
					self.model.ID = result.Data.ID;
					self.OnSaved.Raise(data);
					if (self.dialog === true)
						self.Close(result.Data);
				}
			});
		}
	};
//</script>