@page
@inject ILocalizationService g
@inject IRFIDConfigRepository repo
@{
	Layout = null;
	IRFIDConfig data;
	if(Request.Query.ContainsKey("id"))
	{
		int id = Convert.ToInt32(Request.Query["id"]);
		data = repo.GetByID(id);
	}
	else
	{
		data = repo.Create();
	}
}

<style>
	/* Clase para deshabilitar el enlace */
	.save-disabled {
		color: gray;
		pointer-events: none; /* Deshabilita el clic */
		text-decoration: none; /* Opcional: elimina el subrayado */
		cursor: not-allowed; /* Cambia el cursor */
	}

	.error-message {
		color: red;
		font-size: 12px;
		margin-bottom: 10px;
	}
</style>
<viewrow>
	<viewcolumn>
		<div model name="ID" label="ID:">@data.ID</div>
		<input model name="SerializedConfig" type="hidden" value="@data.SerializedConfig" />
		<div name="ConfigContainer"></div>
	</viewcolumn>
</viewrow>
<viewfooter>
	<a href="#" id="save" class="btn btn-primary" action="Save">@g["Save"]</a>
	<a href="#" class="btn btn-outline-danger" action="Cancel">@g["Cancel"]</a>
</viewfooter>
