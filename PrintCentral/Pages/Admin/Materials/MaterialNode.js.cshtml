//<script>
	var MaterialNode = function (id, text) {
        TreeNode.Extend(this, "MaterialNode", id, text);
		this.CanEdit = true;
		this.menu = {
			MenuWidth: "250px",
			Options: [
				{ Text: "@Html.Raw(g["Open"])", OnClick: this.OnDoubleClick }
				@if (userData.Admin_Materials_CanRename)
				{
				@:,{ Text: "@Html.Raw(g["Rename"])", OnClick: this.Rename }
				}
				@if (userData.Admin_Materials_CanDelete)
				{
				@:,{ IsSeparator: true }
                @:,{ Text: "@Html.Raw(g["Delete"])", OnClick: this.Delete }
				}
			]
		};
		this.Expand();
	};

	MaterialNode.prototype = {
		constructor: MaterialNode,

		loadDependencies: function (callback) {
			AppContext.LoadJS("/Admin/Materials/MaterialView.js").then(()=>callback());
		},

		GetContextMenu: function () {
			return this.menu;
		},

		@if (userData.Admin_Materials_CanRename)
		{
		<text>
		Rename: function () {
			this.BeginEdit();
		},

		OnEditEnding: function (value) {
			return AppContext.Materials.Rename(this.EntityID, value);
		},
		</text>
		}

		@if (userData.Admin_Materials_CanDelete)
		{
		<text>
		Delete: function () {
			var self = this;
			AppContext.Materials.Delete(this.EntityID, function (result) {
				if (result.Success)
					self.Remove();
			});
		},
		</text>
		}

		OnDoubleClick: function () {
			var self = this;
			this.loadDependencies(function () {
				var view = new MaterialView(self.EntityID);
				view.NodeID = self.NodeID;
				view.OnSaved.Subscribe(self, function (data) { this.setText(data.Name); });
				view.Show(self.getViewContainer());
			});
		}
	};
//</script>



