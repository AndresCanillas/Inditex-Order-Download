@page
@inject ILocalizationService g
@inject IUserData userData

<viewcard>
    <viewrow>
        <viewcolumn>
            <inlineform>
                <input model name="InitialDate" label="@g["Change Date"]:" data-type="Date" value="" style="min-width:100px;max-width:130px;" />
            </inlineform>
        </viewcolumn>
    </viewrow>
    <viewfooter>
        <viewrow>
            <viewcolumn>
                <inlineform class="form-inline">
                    <a href="#" class="btn btn-secondary btn-sm" action="Cancel">@g["Cancel"]</a>
                </inlineform>
            </viewcolumn>

            <viewcolumn>
                <inlineform class="form-inline pull-right">
                    <div class="form-check mt-1 mr-sm-3">
                        <input model name="Confirm" class="form-check-input" type="checkbox" id="__inlineFormCheckDD" no-transform action="click:ClickConfirm">
                        <label class="form-check-label" for="__inlineFormCheckDD">
                            @g["Confirm action?"]
                        </label>
                    </div>
                    <a href="#" name="SubmitButton" class="btn btn-sm btn-primary" action="Save">@g["Change Date"]</a>
                </inlineform>
            </viewcolumn>
        </viewrow>
    </viewfooter>
</viewcard>