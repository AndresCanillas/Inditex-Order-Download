@page
@inject ILocalizationService g
@inject IUserData userData
@{
	Layout = null;
    var appuserId = userData.Id;
}

<input model name="UserId" type="hidden" value="@appuserId" />
<viewcard>
	<viewrow>
		<viewcolumn>
			<nav aria-label="breadcrumb">
				<ol class="breadcrumb">
					<li class="breadcrumb-item"><a href="#" action="BackToBrands">@g["All Brands"]</a></li>
					<li name="NavBrand" class="breadcrumb-item active" aria-current="page" style="display:none;">Brand</li>
				</ol>
			</nav>
		</viewcolumn>
	</viewrow>
	<viewrow name="BrandsRow">
		<viewcolumn>
			<div name="Brands" component="FormView" controller="/Common/Components/BrandsListView.js"></div>
		</viewcolumn>
	</viewrow>
	<viewrow name="ProjectsRow" style="display:none;">
		<viewcolumn>
			<div name="Projects" component="FormView" controller="/Common/Components/ProjectsListView.js"></div>
		</viewcolumn>
	</viewrow>
</viewcard>

