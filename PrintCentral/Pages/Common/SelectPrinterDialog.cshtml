@page
@inject ILocalizationService g
@inject IUserData userData
@inject ILocationRepository locationRepo
@{
	Layout = null;
	var locations = locationRepo.GetByCompanyID(userData.SelectedCompanyID);
}
<viewrow>
	<viewcolumn>
		<viewform>
			<select model name="LocationID" label="@g["Location"]:" action="change:LoadPrinters" validation="required" options="@(OptionList.FromEnumerable(locations, "ID", "Name"))" />
			<select model name="PrinterID" label="@g["Printer"]:" validation="required" />
		</viewform>
	</viewcolumn>
</viewrow>
<viewfooter>
	<button type="button" class="btn btn-primary" action="Ok">@g["Ok"]</button>
	<button type="button" class="btn btn-secondary" action="Cancel">@g["Cancel"]</button>
</viewfooter>
