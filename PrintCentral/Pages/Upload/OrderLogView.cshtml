@page
@inject ILocalizationService g
@inject ICompanyRepository repo
@inject IUserData  userData
@{
    Layout = null;
    var isIDT = userData.IsIDT;
    var isAdmin = User.IsInRole(Roles.SysAdmin);
}
<viewcard>

    <viewrow>
        <viewcolumn>
            <div class="toolbar-body" style="width:100%">
                <span class="toolbar-grip"></span>
            </div>
            <div component="OrderGrid" name="GridOrderLog" style="width:100%; max-height:70vh;">
                <template>

                    <column width="100" field="CreatedDate" render="RenderCreatedDate">@g["Date"]</column>
                    <column width="100" field="LogID">@g["#"]</column>
                    @if (isIDT)
                    {
                        <column width="100" field="LevelText" render="GridViewLevelRender">@g["Level"]</column>
                    }
                    <column width="100" field="OrderNumber">@g["Order #"]</column>

                    <column width="100" field="Message" render="GridViewMessageRender">@g["Message"]</column>
                    <column width="150" field="Comments">@g["Comments"]</column>

                    <column width="100" field="CreatedBy">@g["Register By"]</column>

                    <column width="100" field="ArticleCode">@g["Article Code"]</column>
                </template>
            </div>
        </viewcolumn>
    </viewrow>
</viewcard>