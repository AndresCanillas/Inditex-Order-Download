@page
@inject ILocalizationService g
@{
	Layout = null;
}
<div name="ResultsUI" class="container-fluid" style="display:none;">
	<div class="row">
		<div name="ErrorColumn" class="col-sm-12 col-md-12 col-lg-4 col-xl-3" style="margin-bottom:10px;">
			<div component="FormView" name="UploadErrors" controller="/Upload/UploadErrors.js">
			</div>
		</div>
		<div name="TableContainer" class="col-sm-12 col-md-12 col-lg-8 col-xl-9">
			<div class="card">
				<div class="card-body">
					<div component="TableView" name="ResultsTable" style="max-height:55vh;">
					</div>
					<div style="margin:10px 10px 10px 0px; clear:both;">
						<div name="TotalRows" style="font-size:11px; margin-right:10px; float:left; min-width:400px;"></div>
						<div name="PrevPage" action="Previous" class="badge badge-secondary" style="cursor:pointer; margin-right:10px; float:left; display:none"><span class="fa fa-angle-left"></span></div>
						<div name="NextPage" action="Next" class="badge badge-secondary" style="cursor:pointer; margin-right:10px; float:left; display:none"><span class="fa fa-angle-right"></span></div>
					</div>
					<br />
					<div class="text-right" style="margin:10px 10px 10px 0px">
						<p name="UserMessage" style="display:none; float:left; margin-top:8px; font-size:15px; font-weight:200;" class="badge badge-warning">@g["Please ensure the received data is correct before you accept."]</p>
						<input type="button" name="btnAcceptData" action="AcceptDataUpload" class="btn btn-primary" style="width:200px; display:none;" value="@g["Accept"]" />
						<input type="button" name="btnCancel" action="CancelUpload" class="btn btn-danger" style="width:100px" value="@g["Cancel"]" />
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<div name="MessageUI" class="container" style="display:none;">
	<div class="row">
		<div class="col">
			<div class="card" style="min-height:50vh;">
				<div class="card-body">
					<p name="MsgTitle"></p>
					<hr class="my-4" />
					<p name="MsgContent" class="lead"></p>
				</div>
			</div>
		</div>
	</div>
</div>

