@page
@inject ILocalizationService g
@{
    Layout = null;
}
<div id="GetOrdersDialog" class="p-3">
    <img src="~/images/zara-logo.jpg" width="140" height="80" />
    <div class="form-group">
        <label name="information" style="font-family:Calibri; align-content:center; font-size:20pt; color:black">@g["Please introduce the order number"]</label>
        <input type="text" name="orderNumber" class="form-control" maxlength="10" minlength="5" pattern="[0-9]*" required />
    </div>
    <div class="form-group">
        <label name="information" style="font-family:Calibri; align-content:center; font-size:20pt; color:black">@g["Please introduce the campaign code"]</label>
        <input type="text" name="campaignCode" class="form-control" maxlength="3" minlength="3" pattern="[IVPOivpo][0-9]{2}" required />
    </div>
    <div class="form-group">
        <label name="information" style="font-family:Calibri; align-content:center; font-size:20pt; color:black">@g["Please introduce the vendor id"]</label>
        <input type="text" name="vendorId" class="form-control" maxlength="10" minlength="5" pattern="[0-9]*" required />
    </div>
    <div name="orderNumberError" class="invalid-feedback d-none"></div>
    <button type="button" class="btn btn-primary" align-content:center; name="buttonGetOrder" ; action="GetOrder">@g["Get Order"] </button>

    <div class="order-process-tracker mt-3 d-none" name="processTrackerContainer">
        <button type="button" class="btn btn-link order-process-tracker__toggle p-0" name="processTrackerToggle" aria-expanded="false">
            ▼ @g["See process phases"]
        </button>
        <ul class="order-process-tracker__list mt-2" name="processTrackerList"></ul>
    </div>

    <div name="information2" class="mt-3"></div>
</div>
<script src="~/js/GetOrdersValidation.js"></script>
<script src="~/js/GetOrderProcessTracker.js"></script>
