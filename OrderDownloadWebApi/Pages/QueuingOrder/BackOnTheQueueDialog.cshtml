@page
@inject ILocalizationService g
@{
    Layout = null;
}
<div id="backOnQueueDialog" class="p-3">
    <img src="~/images/Inditex-Logo2.png" width="140" height="80" />
    <div class="form-group">
        <label name="information" style="font-family:Calibri; align-content:center; font-size:20pt; color:black">@g["Please introduce the order number"]</label>
        <input type="text" name="orderNumber" class="form-control" maxlength="11" minlength="10" pattern="[0-9]*" required />
    </div>
    <div name="orderNumberError" class="invalid-feedback d-none">
        @g["Please enter a valid order number (only numbers, 10 to 11 digits)."]
    </div>
    <button type="button" class="btn btn-primary" align-content:center; name="buttonSendBackToQueue" ; action="SendBackToQueue">@g["Send Back To Queue"] </button>
    <div name="information2" class="mt-3"></div>
</div>


